{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "Europe/Brussels",
  "pinDigests": false,
  "commitMessagePrefix": ":arrow_up: ",
  "reviewers": [
    "team:maintainers"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true
    },
    {
      "description": "Pin Ubuntu LTS versions (20.04, 22.04, 24.04) to avoid unwanted upgrades",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ubuntu"
      ],
      "matchCurrentVersion": "/^(20\\.04|22\\.04|24\\.04)$/",
      "enabled": false
    },
    {
      "description": "Allow Ubuntu non-LTS versions to auto-update to newer versions",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ubuntu"
      ],
      "matchCurrentVersion": "!/^(20\\.04|22\\.04|24\\.04)$/",
      "enabled": true
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^Makefile$/"
      ],
      "matchStrings": [
        "AGENT_VERSION\\s*:=\\s*(?<currentValue>v[0-9]+\\.[0-9]+\\.[0-9]+)"
      ],
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver",
      "packageNameTemplate": "kairos-io/kairos-agent"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^Makefile$/"
      ],
      "matchStrings": [
        "IMMUCORE_VERSION\\s*:=\\s*(?<currentValue>v[0-9]+\\.[0-9]+\\.[0-9]+)"
      ],
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver",
      "packageNameTemplate": "kairos-io/immucore"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^Makefile$/"
      ],
      "matchStrings": [
        "KCRYPT_DISCOVERY_CHALLENGER_VERSION\\s*:=\\s*(?<currentValue>v[0-9]+\\.[0-9]+\\.[0-9]+)"
      ],
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver",
      "packageNameTemplate": "kairos-io/kcrypt-discovery-challenger"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^Makefile$/"
      ],
      "matchStrings": [
        "PROVIDER_KAIROS_VERSION\\s*:=\\s*(?<currentValue>v[0-9]+\\.[0-9]+\\.[0-9]+)"
      ],
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver",
      "packageNameTemplate": "kairos-io/provider-kairos"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^Makefile$/"
      ],
      "matchStrings": [
        "EDGEVPN_VERSION\\s*:=\\s*(?<currentValue>v[0-9]+\\.[0-9]+\\.[0-9]+)"
      ],
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver",
      "packageNameTemplate": "mudler/edgevpn"
    },
    {
      "customType": "regex",
      "description": "Update Ubuntu Docker images in workflows",
      "fileMatch": [
        "^\\.github/workflows/.*\\.ya?ml$"
      ],
      "matchStrings": [
        "\"ubuntu:(?<currentValue>\\d+\\.\\d+)\""
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "ubuntu",
      "versioningTemplate": "ubuntu"
    },
    {
      "customType": "regex",
      "description": "Update Fedora Docker images in workflows",
      "fileMatch": [
        "^\\.github/workflows/.*\\.ya?ml$"
      ],
      "matchStrings": [
        "\"fedora:(?<currentValue>\\d+)\""
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "fedora"
    },
    {
      "customType": "regex",
      "description": "Update Rocky Linux Docker images in workflows",
      "fileMatch": [
        "^\\.github/workflows/.*\\.ya?ml$"
      ],
      "matchStrings": [
        "\"rockylinux/rockylinux:(?<currentValue>\\d+)\""
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "rockylinux/rockylinux"
    },
    {
      "customType": "regex",
      "description": "Update AlmaLinux Docker images in workflows",
      "fileMatch": [
        "^\\.github/workflows/.*\\.ya?ml$"
      ],
      "matchStrings": [
        "\"almalinux:(?<currentValue>\\d+)\""
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "almalinux"
    },
    {
      "customType": "regex",
      "description": "Update Debian Docker images in workflows",
      "fileMatch": [
        "^\\.github/workflows/.*\\.ya?ml$"
      ],
      "matchStrings": [
        "\"debian:(?<currentValue>\\d+)\""
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "debian"
    },
    {
      "customType": "regex",
      "description": "Update Alpine Docker images in workflows",
      "fileMatch": [
        "^\\.github/workflows/.*\\.ya?ml$"
      ],
      "matchStrings": [
        "\"alpine:(?<currentValue>\\d+\\.\\d+)\""
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "alpine"
    },
    {
      "customType": "regex",
      "description": "Update OpenSUSE Leap Docker images in workflows",
      "fileMatch": [
        "^\\.github/workflows/.*\\.ya?ml$"
      ],
      "matchStrings": [
        "\"opensuse/leap:(?<currentValue>\\d+\\.\\d+)\""
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "opensuse/leap"
    },
    {
      "customType": "regex",
      "description": "Update OpenSUSE Tumbleweed Docker images in workflows",
      "fileMatch": [
        "^\\.github/workflows/.*\\.ya?ml$"
      ],
      "matchStrings": [
        "\"opensuse/tumbleweed\"(?!:)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "opensuse/tumbleweed",
      "currentValueTemplate": "latest"
    },
    {
      "customType": "regex",
      "description": "Update Hadron beta Docker images in workflows",
      "fileMatch": [
        "^\\.github/workflows/.*\\.ya?ml$"
      ],
      "matchStrings": [
        "\"ghcr\\.io/kairos-io/hadron:(?<currentValue>v[0-9.]+(?:-beta\\d+)?)\""
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "ghcr.io/kairos-io/hadron",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "description": "Update Hadron main Docker images in workflows",
      "fileMatch": [
        "^\\.github/workflows/.*\\.ya?ml$"
      ],
      "matchStrings": [
        "\"ghcr\\.io/kairos-io/hadron:(?<currentValue>main)\""
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "ghcr.io/kairos-io/hadron",
      "versioningTemplate": "loose"
    }
  ]
}
